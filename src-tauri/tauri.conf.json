{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "code-snippets",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "app": {
                "all": false,
                "hide": false,
                "show": false
            },
            "window": {
                "minimize": true,
                "maximize": true,
                "close": true,
                "unmaximize": true,
                "startDragging": true
            },
            "shell": {
                "all": false,
                "open": true
            }
        },
        "windows": [
            {
                "decorations": false,
                "resizable": true,
                "transparent": true,
                "title": "code-snippets",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.tauri.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}